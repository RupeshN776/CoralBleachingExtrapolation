@model GBRCoralPoint

<div class="container mt-4">
    <div class="row">
        <class ="card">
            <div class="card-header bg-primary text-white">
                <h2> Update GBR Coral</h2>
            </div>
            <div ="card-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="GBRCoralPointID" />
                    <div class="form-group mb-3">
                        <label asp-for="ReefName" class="form-label">Reef Name</label>
                        <input asp-for="ReefName" class="form-control" placeholder="Enter the Reef Name"></input>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ReportYear" class="form-label">Report Year</label>
                        <input asp-for="ReportYear" class="form-control" placeholder="Enter the Report Year"></input>
                        <span asp-validation-for="ReportYear" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Point" class="form-label">Point (WKT Format)</label>
                        <input asp-for="Point" class="form-control" placeholder="POINT ((...))" readonly />
                    </div>

                    <!-- Hidden field to store WKT string -->
                    <input type="hidden" name="ShapeWkt" value="@Model.Point?.ToString()" />
                    <div class="form-group mb-3">
                        <label asp-for="Latitude" class="form-label">Latitude</label>
                        <input asp-for="Latitude" class="form-control" placeholder=""></input>
                        <span asp-validation-for="Latitude" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Longitude" class="form-label">Longitude</label>
                        <input asp-for="Longitude" class="form-control" placeholder=""></input>
                        <span asp-validation-for="Longitude" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-controller="GBR" asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </class>
    </div>
</div>
