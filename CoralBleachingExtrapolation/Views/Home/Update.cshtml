@model WorldCoral
<!--3-10-2025   1.1               Ben        Create web form for polygon update-->
<div class="container mt-4">
    <div class="row">
        <class ="card">
            <div class="card-header bg-primary text-white">
                <h2> Update Global Coral</h2>
            </div>
            <div ="card-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="GlobalCoralId" />
                    <div class="form-group mb-3">
                        <label asp-for="CoralName" class="form-label">Coral Name</label>
                        <input asp-for="CoralName" class="form-control" placeholder="Enter the Coral Name"></input>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="OriginName" class="form-label">Origin Name</label>
                        <input asp-for="OriginName" class="form-control" placeholder="Enter the Origin Name"></input>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Family" class="form-label">Coral Name</label>
                        <input asp-for="Family" class="form-control" placeholder="Enter the family"></input>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Genus" class="form-label">Genus</label>
                        <input asp-for="Genus" class="form-control" placeholder="Enter the Genus"></input>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Species" class="form-label">Species</label>
                        <input asp-for="Species" class="form-control" placeholder="Enter the Species"></input>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Shape" class="form-label">Shape (WKT Format)</label>
                        <input asp-for="Shape" class="form-control" placeholder="POLYGON ((...))" readonly />
                    </div>

                    <!-- Hidden field to store WKT string -->
                    <input type="hidden" name="ShapeWkt" value="@Model.Shape?.ToString()" />
                    <div class="form-group mb-3">
                        <label asp-for="GISAREAKM2" class="form-label">Area</label>
                        <input asp-for="GISAREAKM2" class="form-control" placeholder=""></input>
                        <span asp-validation-for="GISAREAKM2" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RegionFK" class="form-label">Oceanic Region</label>
                        <select asp-for="RegionFK" class="form-control">
                            <option value="1">Atlantic Ocean</option>
                            <option value="2">Indian Ocean</option>
                            <option value="3">Pacific Ocean</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>

                    <!-- missing shape: needa figure out how we accept an coodinate and create a polygon -->
                    <!-- missing area: we could cal the area based on the polygon -->
                    <!-- missing region: a drop box is needed to let client choose region -->
                </form>
            </div>
        </class>
    </div>
</div>
