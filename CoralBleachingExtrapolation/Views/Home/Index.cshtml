@{
    ViewData["Title"] = "Global Coral";
}
@model List<WorldCoral>

<h1>@ViewData["Title"]</h1>

<div>

</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Shape</th>
                <th>RegionID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var coral in Model)
            {
                <tr>
                    <td>@coral.GlobalCoralId</td>
                    <td>@coral.CoralName</td>
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 500px; display: block;">@coral.Shape</td>
                    <td>@coral.RegionFK</td>
                    <td>
                        <a asp-controller="Home" asp-action="Update" asp-route-id="@coral.GlobalCoralId" class="btn btn-primary btn-sm">
                            Update
                        </a>
                    
                        <a asp-controller="Home" asp-action="" class="btn btn-danger btn-sm">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<script>
    var map;

    function initMap() {

        map = new google.maps.Map(document.getElementById("map"),

            {
                center: { lat: 51.5074, lng: -0.1278 }, //london, UK
                zoom: 13, //standard
            }

        ); //map

    }

    window.initMap = initMap();

</script>

<div id="map"></div>

<script defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyABhiUQNg89xlM8r4_4ahrdxRYzUU2QTjo&callback=initMap"></script>